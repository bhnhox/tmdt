<!doctype html>
<html lang="en">
  <!-- <Header> -->
    <%- include("chucnang/header.ejs") %>
    <!-- <End of Header> -->
  
    <body>
        <!-- Navnar -->
      <%- include("chucnang/navbar.ejs") %>
        <!-- End of Navnar -->
        <ul>
          <p>Danh mục</p>
          <%  find.forEach(element => { %>
            <li><a href=<%= "danhmuc/" + element.ten %> > <%= element.ten %></a></li>
    
          <% }); %>
        </ul>

  <p>Sản phẩm</p>

  <div class="card" style="width: 18rem;">
    <img src=<%= mathang.anh %> alt=<%= mathang.ten %>>
    <div class="card-body">
      <h5 class="card-title"> Mặt hàng: <%= mathang.ten %></h5>
      <p> Mô tả: <%= mathang.mota %></p>
      <P>Số lượng trong kho: <%= mathang.soluong %></P>
      <p class="card-text">Giá <%= mathang.gia %>đ</p>
      <form action="hoadon" method="post">
        <input type="hidden" name="ten" value=<%= mathang.ten %>>
        <input type="hidden" name="anh" value=<%= mathang.anh %>>
        <input type="hidden" name="mota" value=<%= mathang.mota %>>
        <input type="hidden" name="id" value=<%= mathang.id %>>
        <input type="hidden" id="gia" name="gia" value=<%= mathang.gia %>>
        <label>Số lượng</label>
        <input type="number" id="soluongdat" name="soluongdat" value="1"  onchange="myFunction()"	>
        <p>Thành tiền:</p>
        <p id="thanhtien"><%= mathang.gia %></p>
        <button type="submit">Mua hàng</button>

      </form>

    </div>
  </div>


  <script>
    function myFunction() {
      var soluong = document.getElementById("soluongdat").value;
      var gia = document.getElementById("gia").value;
      document.getElementById("thanhtien").innerHTML = soluong * gia;
      //myFunction();
    }
  </script>
  <!-- Optional JavaScript -->
  <!-- jQuery first, then Popper.js, then Bootstrap JS -->
  
</body>

</html>