<!doctype html>
<html lang="en">
  <!-- <Header> -->
  <%- include("chucnang/header.ejs") %>
  <!-- <End of Header> -->

  <body>
      <!-- Navnar -->
    <%- include("chucnang/navbar.ejs") %>
      <!-- End of Navnar -->
    <div class="container mb-5">
    <p>ID hóa đơn: <%= donhang.idhoadon %></p>
    <p>Hình thức thanh toán: <%= donhang.thanhtoan %></p>
    <p>Mã giao dịch: <%= donhang.magiaodich %> </p>
    <p>Số tiền: <%= donhang.thanhtien %></p>
      <p>Thời gian đặt hàng: <%= new Date(donhang.thoigian).toLocaleString() %></p>
    
    <table class="table">
      <thead>
        <tr>
          <th scope="col"></th>
          <th scope="col">Tên sản phẩm </th>
          <th scope="col">Đơn giá</th>
          <th scope="col">Số lượng</th>
       
        </tr>
      </thead>
      <tbody>
        <% donhang.hang.forEach(element => { %>
          <tr>
          <th scope="row"></th>
          <td><%= element.ten %></td>
          <td><%= element.gia %></td>
          <td><%= element.soluongdat %></td>
        
        </tr>
        <%  }); %>

      </tbody>
    </table>
    </div>
    <%- include("chucnang/footer.ejs") %>
  </body>
</html>